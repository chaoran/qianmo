<%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put } do |f| %>
	<%= f.input :password, :label => "#{t :new_password}" %>
	<%= f.input :password_confirmation, :label => "#{t :confirm_new_password}" %>
	<%= hidden_field_tag :field, "password" %>
	<%= f.input :current_password, :label => "#{t :current_passowrd}", 
																 :hint => "#{t :why_current_password_is_needed}", :required => true %>
	<%= f.button :wrapped, :cancel => edit_user_registration_path(current_user) %>
<% end %>