<div class="articles">
  <% if params[:user_id] %>
    <%= render 'shared/post', :collection => @articles %>
  <% else %>
    <% if @articles.length > 0 %>
      <% for article in @articles %>
        <%= render 'preview', :article => article %>
      <% end %>
    <% else %>
      <p><%= t :'articles.no_articles' %></p>
    <% end %>
  <% end %>
</div>