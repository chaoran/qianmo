<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">Ã—</button>
  <h3><%= t :generate_thumb %></h3>
</div>
<div class="modal-body">
	<div class="span5">
		<ul class="thumbnails">
			<li class="span3">
				<div class="thumbnail"><%= image_tag @profile.avatar.url(:frontpage), :id => "cropbox" %></div>
			</li>
			<li class="span2">
				<div class="thumbnail">
					<div class="caption">
						<label><%= t :thumb_preview %></label>
					</div>
					<div style="width:100px; height:100px; overflow:hidden">
					  <%= image_tag @profile.avatar.url(:frontpage), :id => "cropbox-preview" %>
					</div>
				</div>
			</li>
		</ul>
	</div>
</div>
<div class="modal-footer">
	<%= simple_form_for @profile, :url => user_profile_avatar_path(current_user),
	 											 :html => { :method => :put } do |f| %>
		<% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
			<%= f.hidden_field attribute, :id => attribute %>
		<% end %>
		<div class="actions">
			<%= f.button :submit, "#{t :okay}", :class => "btn-primary" %>
			<a href="#" class="btn" data-dismiss="modal"><%= t :cancel %></a>
		</div>
	<% end %>
</div>

