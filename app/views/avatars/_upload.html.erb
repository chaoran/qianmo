<div class="modal fade" id="avatarModal">
	<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3><%= t :edit_avatar %></h3>
  </div>
  <div class="modal-body">
		<%= simple_form_for @profile, :url => user_profile_avatar_path(current_user),
		 															:html => { :method => :post },
		 															:remote => true do |f| %>
			<div class="inputs">
				<%= f.label :avatar, "#{t :upload_a_photo}" %>
				<%= f.file_field :avatar %>

  </div>
  <div class="modal-footer">
		<div class="actions">
			<%= f.button :submit, "#{t :upload}", :class => "btn-primary" %>
			<a href="#" class="btn" data-dismiss="modal"><%= t :cancel %></a>
		</div>
		<% end %>
  </div>
</div>