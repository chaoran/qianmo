<div class="comment hoverable" id="comment_<%= comment.id %>">
  <div class="comment-header">
    <%= link_to user_profile_path(comment.user) do %>
      <%= image_tag comment.user.avatar.url(:thumb), :class => "avatar" %>
      <%= comment.user.name %>
    <% end %>
    <span class="grey pull-right">
      <%= "#{t :posted_at_time, :time => time_ago_in_words(comment.created_at)}".html_safe %>
    </span>
  </div>
  <div class="comment-body">
    <%= comment.text.html_safe %>
  </div>
  <div class="comment-actions hidden show-on-hover">
    <%= render "likes/show", :likable => comment %>
    <span class="grey"> · </span>
    <%= link_to_with_icon "#{t :reply}", "#", "icon-comment-alt", :class => "action-reply"  %>
    <% if current_user == comment.user %>
    <span class="grey"> · </span>
    <%= link_to_with_icon "", comment_path(comment), "icon-remove", :class => "action-delete grey", :remote => true,
                          :title => "#{t :delete}", :rel => "tooltip", :method => :delete  %>
    <% end %>
  </div>
</div>