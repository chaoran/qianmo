var new_comment = $('.post_<%= @comment.parent_id %>').find('.new-comment');
new_comment.before("<%= j render :partial => 'show', :locals => {:comment => @comment} %>").hide().slideDown();
new_comment.find("#post_text").val("");
new_comment.removeClass("ready");

<% for user in @comment.publish_to_users %>
  <%= render :partial => "notifications/update", :locals => {:user => user} %>
<% end %>