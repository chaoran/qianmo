<%= content_tag :div, :class => "modal fade", 
											:style => "display: #{resource.errors.any? ? 'block' : 'none'};",
 											:id => "passwordModal" do %>
	<%= simple_form_for(resource, :as => resource_name, 
																:url => password_path(resource_name), 
																:html => { :method => :post }) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3><%= t :send_reset_password_email %></h3>
  </div>
  <div class="modal-body">
		  <%= f.error_notification %>
		  <div class="inputs">
		    <%= f.input :email, :required => true %>
		  </div>	
  </div>
  <div class="modal-footer">
		<div class="actions">
			<%= f.button :submit, "#{t :send}", :class => "btn-primary", :id => 'reset_password_send_button' %>
    	<a href="#" class="btn" data-dismiss="modal"><%= t :cancel %></a>
	  </div>
  </div>
	<% end %>
<% end %>