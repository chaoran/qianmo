<%= title "#{t :sign_in_title}" %>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean, :wrapper => :checkbox if devise_mapping.rememberable? %>
  </div>

  <div class="actions">
    <%= f.button :submit, "#{t :sign_in}", :class => "btn-primary" %>&nbsp;
		<%= link_to "#{t :forgot_password}", new_password_path(resource_name) %>
  </div>
<% end %>