var form = $("#auto_fillin").closest("form")
var prefix = "#page_album_attributes_"
<% if @item["image"] %>
form.find(prefix + "remote_cover_url").val('<%= j @item["image"].gsub("spic", "lpic") %>')
<% end %>
<% if @item["title"] %>
form.find(prefix + "title").val('<%= j @item["title"] %>')
<% end %>
<% if @item["attrs"]["singer"] %>
form.find(prefix + "artist").val('<%= j @item["attrs"]["singer"].join(", ") %>')
<% end %>
<% if @item["alt_title"] %>
form.find(prefix + "edition").val('<%= j @item["alt_title"] %>')
<% end %>
<% if @item["attrs"]["tracks"] %>
form.find(prefix + "tracks").val('<%= j @item["attrs"]["tracks"].join(", ").gsub("\n", "/") %>')
<% end %>
<% if @item["attrs"]["publisher"] %>
form.find(prefix + "studio").val('<%= j @item["attrs"]["publisher"].join(", ") %>')
<% end %>
<% if @item["attrs"]["pubdate"] %>
<% date = parse_date(@item["attrs"]["pubdate"].join(", ")) %>
form.find(prefix + "released_on_1i").val('<%= date[0] %>')
form.find(prefix + "released_on_2i").val('<%= date[1] %>')
form.find(prefix + "released_on_3i").val('<%= date[2] %>')
<% end %>
<% if @item["summary"] %>
form.find(prefix + "introduction").val('<%= j @item["summary"] %>')
<% end %>