$("#<%= params[:token] %>.follow_button").replaceWith("<%= j render :partial => 'shared/follow_button', :locals => {:user => @user} %>");
$('#<%= @user.object_id %>').addClass("open");
$('#<%= @user.object_id %>').closest('li').removeClass("unread");
var menu = $('#<%= @user.object_id %>').closest('ul');
var num_unread = menu.find(".unread").length
if (num_unread == 0) {
  menu.prev().find('.badge').remove();
} else {
  menu.prev().find('.badge').text(num_unread)
}
