<li class="pinable hoverable" id="friend_event_<%= event.id %>">
  <% unless event.consumed %>
    <%= my_link_to nil, friend_event_path(event.id), :method => :put, :class => "new-badge",
                        :remote => true, :badge => "NEW" %>
  <% end %>
  
  <%= link_to "#{event.trigger.name}", user_profile_path(event.trigger, :fe => event.id) %>

  <% case event.event_type %>
    <% when "follow" %>
      <span><%= t :has_followed_you %></span>
      <% unless event.trigger.followers.include?(event.receiver) %>
        <%= link_to "#{event.trigger.is_male? ? t(:follow_him_back) : t(:follow_her_back)}", user_follow_path(event.trigger), 
                    :class => "btn btn-success", :remote => true, :method => :post %>
      <% end %>
    <% when "request" %>
      <span><%= t :wants_to_add_you_as_friend %></span>
      <%= link_to "#{t :agree}", user_friendship_path(event.trigger, :event_id => event.id), :class => "btn btn-success",
                  :remote => true, :method => :post %>
    <% when "accepted" %>
      <span><%= t :became_your_friend %></span>
  <% end %>
  <em class="grey"><%= t :ago, :time => time_ago_in_words(event.created_at) %></em>
  <%= my_link_to nil, friend_event_path(event), :icon => "icon-remove",
                 :class => "grey show-on-hover hidden pin-right8", :remote => true,
                 :method => :delete %>
</li>