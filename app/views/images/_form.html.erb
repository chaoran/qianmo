<% @modal_name = "image_modal" %>

<%= simple_form_for(@image, :url => page_image_path(@page),
                                :html => { :class => "form-horizontal", 
                                           :method => :post },
															  :remote => true ) do |f| %>
	<div id="billbaord_modal_content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <h3><%= t :image_upload_title %></h3>
    </div>
    <div class="modal-body">
      <div class="inputs">
        <%= f.input :img, :as => :file %>
        <%= f.input :remote_img_url %><br />
      </div>	
    </div>
    <div class="modal-footer">
    	<div class="actions">
    		<%= f.button :submit, "#{t :save}", :class => "btn-primary" %>
      	<a href="#" class="btn" data-dismiss="modal"><%= t :cancel %></a>
      </div>
    </div>
  </div>
<% end %>