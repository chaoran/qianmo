<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
</a>
<% if content_for?(:brand) %>
	<%= yield :brand %>
<% else %>
	<a class="brand" href="#"><%= t :app_name %></a>
<% end %>
<div class="nav-collapse">
	<% if user_signed_in? %>
	  <ul class="nav">
		  <li><%= link_to "#{t :news}" %></li>
	    <li><%= link_to "#{t :pages}", pages_path %></li>
	  </ul>
		<%= form_tag "#", :class => "navbar-search pull-left", :method => :get do %>
			<%= text_field_tag 'search', nil, :placeholder => "#{t :search_bar_placeholder}", 
																				:class => "search-query" %>
		<% end %>

		<ul class="nav pull-right link-group">
			<li>
				<a id="nav-image" href="<%= user_profile_path(current_user) %>">
					<%= image_tag current_user.avatar.url(:thumb), :width => "35px", :height => "35px" %>
					<%= current_user.name %>
				</a>
			</li>
			<li class="divider-vertical"></li>
			<li class="dropdown">
				<a id="nav-caret" href="#" class="dropdown-toggle" data-toggle="dropdown"><b class="caret"></b></a>
				<ul class="dropdown-menu">
					<li><%= link_to "#{t :account_setting}", edit_user_registration_path %></li>
					<li><%= link_to "#{t :logout}", destroy_user_session_path, :method => :delete %></li>
				</ul>
			</li>
		</ul>
	<% else %>
	  <% unless controller.controller_name == "accounts" && controller.action_name == "new" %>
	    <div class="nav pull-right">
  	    <%= link_to "#{t :sign_up}", new_user_registration_path, 
  	                                 :class => "btn btn-success" %>
  	  </div>
  	<% end %>
	  <% unless controller.controller_name == "sessions" && controller.action_name == "new" %>
	    <%= render 'shared/login' %>
	  <% end %>

	<% end %>
</div>