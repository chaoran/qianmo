<!DOCTYPE html>
<html>
<head>
  <title><%= t :app_name %> - <%= content_for?(:title) ? yield(:title) : t(:app_slogan) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!-- verify ownership for weibo auth2 -->
  <meta property="wb:webmaster" content="581141a7b0ea5cca" />
</head>
<body>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
					<%= render 'layouts/navigation' %>
			</div>
		</div>
	</div>
	<div id="floatbar">
	  <div class="container">
	    <%= yield(:floatbar) if content_for?(:floatbar) %>
	  </div>
	</div>
	<div class="container" <%= "style=\"padding-top:180px;\"".html_safe if content_for?(:floatbar) %>>
		<div class='content'>
			<div class='row'>
				<div class='span12'>
					<div id="alert-placeholder">					
						<%= render 'layouts/messages' %>						
					</div>
					<%= yield %>
				</div>
			</div>
		</div>
	</div>
	<footer>
	 <div class="container">
	   <div class="row">
	     <div class="span3">
	       <h3><%= t :product %></h3>
	       <ul>
	         <li><a href=""><%= t :website %></a></li>
	         <li><a href=""><%= t :english_website %></a></li>
	         <li><a href=""><%= t :iphone_app %></a></li>   
	         <li><a href=""><%= t :andriod_app %></a></li>
	       </ul>
	     </div>
	     <div class="span3">
	       <h3><%= t :developer %></h3>
	       <ul>
	         <li><a href=""><%= t :work_with_us %></a></li>
	         <li><a href=""><%= t :api %></a></li>   
	         <li><a href=""><%= t :website_connections %></a></li>
	         <li><a href=""><%= t :developers_forum %></a></li>
	       </ul>
	     </div>
	     <div class="span3">
	       <h3><%= t :others %></h3>
	       <ul>
	         <li><a href=""><%= t :about_us %></a></li>
	         <li><a href=""><%= t :contact_us %></a></li>   
	         <li><a href=""><%= t :disclaimer %></a></li>
	         <li><a href=""><%= t :partnership %></a></li>
	       </ul>
	     </div>
	   </div>
	 </div>
	 <div class="floor">
	   <div class="container">
	     <div class="row">
  	     <p><%= t :floor_text %></p>
  	   </div>
	   </div>
	 </div>
	</footer>
	<div id="modal-placeholder">
	  <%= yield(:modal) if content_for?(:modal) %>
	</div>
</body>
</html>
