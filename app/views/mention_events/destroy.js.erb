$("#mention_event_<%= params[:id] %>").remove();
if ($("#mention_event_list li").length == 0) {
  $("#mention_event_list ul").append("<li><%= t :no_events %></li>")
}
var num = $("#mention_event_list .dropdown-toggle .badge").text();
num = parseInt(num);
if (num > 1) {
  $("#mention_event_list .dropdown-toggle .badge").text(String(num-1));
} else {
  $("#mention_event_list .dropdown-toggle .badge").remove();
}