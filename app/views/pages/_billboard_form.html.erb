<% @modal_name = "billboard_modal" %>
<% @billboard = @page.billboard ? @page.billboard : @page.build_billboard %>

<%= simple_form_for(@billboard, :url => page_billboard_path(@page), 
                                :html => { :class => "form-horizontal", :method => :put }, 
                                :remote => true ) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3><%= t :billboard_edit_title %></h3>
  </div>
  <div class="modal-body">
      <div class="inputs">
        <%= f.input :header %>
        <%= f.input :content, :input_html => { :rows => 3 } %>
        <%= f.input :button_name %>
        <%= f.input :button_value %>
      </div>	
  </div>
  <div class="modal-footer">
  	<div class="actions">
  		<%= f.button :submit, "#{t :save}", :class => "btn-primary" %>
    	<a href="#" class="btn" data-dismiss="modal"><%= t :cancel %></a>
    </div>
  </div>
<% end %>