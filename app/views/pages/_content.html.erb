<div class="row">
  <div class="span8">
    <div id="page_header" class="page-header">
      <% if @editable %>
        <%= hidden_edit_button "header", edit_page_path(@page) %>
      <% end %>
      <div id="page_header_show">
        <%= render "pages/header" %>
      </div>
    </div>
    <div id="page_main_section">
      <div class="hero-unit" id="page_has_billboard_display">
        <%= render "billboards/show" %>
      </div>
      <%= render "pages/components/posters" %>
    </div>
  </div>
  <div class="span4">
    <div id='page_side_section'>
      <% if content_for?(:page_actions) %>
        <div class="alert alert-info">
          <%= yield(:page_actions) %>
        </div>
      <% end %>
      <%= render "pages/components/image" %>
      <%= render "pages/components/attribute_group" %>
    </div>
  </div>
</div>