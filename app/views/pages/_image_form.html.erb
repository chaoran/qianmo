<% @modal_name = "image_modal" %>

<%= simple_form_for(@page, :html => { :class => "form-horizontal" }, :remote => true ) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3><%= t :image_upload_title %></h3>
    <%= hidden_field_tag :component, "image" %>
  </div>
  <div class="modal-body">
    <div class="inputs">
      <%= f.input :image, :as => :file %>
      <%= f.input :remote_image_url %><br />
    </div>	
  </div>
  <div class="modal-footer">
  	<div class="actions">
  		<%= f.button :submit, "#{t :save}", :class => "btn-primary" %>
    	<a href="#" class="btn" data-dismiss="modal"><%= t :cancel %></a>
    </div>
  </div>
<% end %>

