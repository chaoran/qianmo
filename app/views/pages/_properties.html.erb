<% if @page.properties.empty? %>
  <p>
    <div>
      <strong><%= t :attribute1 %></strong>:&nbsp;
      <span><%= t :attribute_value1 %></span>
    </div>
    <div>
      <strong><%= t :attribute2 %></strong>:&nbsp;
      <span><%= t :attribute_value2 %></span>
    </div>
  </p>
<% else %>
  <p>
    <% for attribute in @page.properties %>
    <div>
      <strong><%= attribute.label %></strong>:&nbsp;
      <span><%= attribute.value %></span>
    </div>
    <% end %>
  </p>
<% end %>




