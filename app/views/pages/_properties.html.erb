<dl class="dl-horizontal">
<% if @page.properties.empty? %>
  <dt><%= t :attribute1 %>:</dt>
  <dd><%= t :attribute_value1 %></dd>
  <dt><%= t :attribute2 %>:</dt>
  <dd><%= t :attribute_value2 %></dd>
<% else %>
  <% for attribute in @page.properties %>
    <dt><%= attribute.label %>:</dt>
    <dd><%= attribute.value %></dd>
  <% end %>
<% end %>
</dl>



