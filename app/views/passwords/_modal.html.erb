<%= content_tag :div, :class => "modal hide", 
 											:id => "password_modal" do %>
  <%= form_tag password_path, :class => "form-horizontal", :remote => true do %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3><%= t :'passwords.modal_title' %></h3>
  </div>
  <div class="modal-body">
    <div class="control-group">
      <%= label_tag :email, "#{t :'passwords.registered_email'}", :class => "control-label" %>
      <div class="controls">
        <%= text_field_tag :email %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
  	<div class="actions">
  		<%= submit_tag "#{t :send}", :class => "btn btn-primary" %>
    	<a href="#" class="btn" data-dismiss="modal"><%= t :cancel %></a>
    </div>
  </div>
  <% end %>
<% end %>
