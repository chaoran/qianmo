<div class="span6">
  <div class="page-header">
    <h2><%= t :'passwords.set_new_password' %></h2>
  </div>
  <div>
    <%= simple_form_for @account, :url => password_path(:account_id => @account.id), 
                        :html => { :method => :put, :class => 'form-horizontal' } do |f| %>
      <%= f.input :password_reset_token, :as => :hidden %>
      <%= f.full_error :password_reset_token %>
      <div class="inputs">
        <%= f.input :password, :required => true %>
        <%= f.input :password_confirmation, :required => true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "#{t :'actions.okay'}", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>